# App
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/bnu_admission

# Redis
REDIS_URL=redis://redis:6379/0

# JWT — change in production!
JWT_SECRET_KEY=change-me-in-production

# SMS — set to false and configure real SMS provider in production
SMS_MOCK=true

# LLM — Primary model
LLM_PRIMARY_PROVIDER=qwen
LLM_PRIMARY_API_KEY=
LLM_PRIMARY_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_PRIMARY_MODEL=qwen-plus

# LLM — Review model (dual-model verification)
LLM_REVIEW_PROVIDER=qwen
LLM_REVIEW_MODEL=qwen-turbo

# File storage
UPLOAD_DIR=/data/uploads
MAX_UPLOAD_SIZE_MB=50

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
